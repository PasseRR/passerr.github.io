{
  "name": "freemarker",
  "scopeName": "source.freemarker",
  "patterns": [
    {
      "match": "#\\w+",
      "name": "keyword"
    },
    {
      "match": "\\$\\w+(\\.\\w+)*",
      "name": "variable"
    },
    {
      "match": "\\$\\{[^}]*\\}",
      "name": "variable.interpolation"
    },
    {
      "match": "\\.\\w+\\(",
      "name": "function"
    },
    {
      "match": "##.*",
      "name": "comment"
    },
    {
      "match": "<#--[\\s\\S]*?-->",
      "name": "comment.block"
    }
  ]
}
